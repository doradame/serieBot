# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
LICENSE text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# CSV files (preserve original line endings)
*.csv text

# Binary files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary
*.egg binary
*.whl binary
*.zip binary
*.tar binary
*.gz binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
