# SerieBot Environment Configuration
# Copy this file to .env and fill in your actual API keys

# === API KEYS ===
# TMDB API Key - Get it from https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# OpenAI API Key for OVH AI Endpoints - Get it from https://ai.ovh.net/
OPENAI_API_KEY=your_ovh_openai_api_key_here

# === AI MODEL CONFIGURATION ===
# OVH AI Endpoints base URL 
# Options:
# - https://api.ai.ovh.net/v1 (standard OVH AI endpoints)
# - https://gpt-oss-120b.endpoints.kepler.ai.cloud.ovh.net/api/openai_compat/v1 (GPT-OSS-120B model)
OPENAI_API_BASE=https://gpt-oss-120b.endpoints.kepler.ai.cloud.ovh.net/api/openai_compat/v1

# Model to use 
# For standard OVH: mistral-small, mistral-medium, mistral-large
# For GPT-OSS-120B endpoint: leave empty (uses default model)
OVH_MODEL=

# === APPLICATION SETTINGS ===
# Default language for responses (it, en, any)
DEFAULT_LANGUAGE=en

# Enable debug mode (true/false)
DEBUG=false

# Rate limit delay for TMDB API (in seconds)
TMDB_RATE_LIMIT=0.25

# === OPTIONAL SETTINGS ===
# Cache TTL for provider data (in seconds, default: 3600)
PROVIDER_CACHE_TTL=3600

# Maximum suggestions to return (default: 3)
MAX_SUGGESTIONS=3

# Timeout for HTTP requests (in seconds)
REQUEST_TIMEOUT=10